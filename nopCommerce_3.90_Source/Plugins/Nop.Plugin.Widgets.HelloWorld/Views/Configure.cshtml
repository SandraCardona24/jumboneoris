@{
    Layout = "";
}
@model Nop.Plugin.Widgets.HelloWorld.Domain.HelloWorldRecord
@using Nop.Web.Framework;

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                @T("Plugins.Widgets.HelloWorld.Message")
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        ID:
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.Id)
                        @Html.ValidationMessageFor(model => model.Id)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @*@Html.OverrideStoreCheckboxFor(model => model.Message_OverrideForStore, model => model.Message, Model.ActiveStoreScopeConfiguration)*@
                        @Html.NopLabelFor(model => model.Message)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.Message)
                        @Html.ValidationMessageFor(model => model.Message)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @*@Html.OverrideStoreCheckboxFor(model => model.UrlImg_OverrideForStore, model => model.UrlImg, Model.ActiveStoreScopeConfiguration)*@
                        @Html.NopLabelFor(model => model.UrlImg)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.UrlImg)
                        @Html.ValidationMessageFor(model => model.UrlImg)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}